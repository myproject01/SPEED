/* miniprogram/pages/discover/discover.wxss */
@import "../discover/advtemp/advtemp.wxss";
page{
  background-color:rgba(196, 192, 192, 0.301);
}
.search{ 
      width: 95%;  
    }  
    .search_arr {
      height: 70rpx; 
      margin-top: 3rpx;
      display: flex;
      flex-direction: row;
      align-items: center; 
      justify-content:center;
      background-color: #F5F5F5;
      border-radius: 20rpx; 
    }  
    .search_arr text{
      color: #999b9e;
    }
   
    .page_row{ 
      background-color: white;
      position: fixed;
      width: 100%;
      height: 90rpx;
      display: flex;  
      flex-direction:row;
      justify-content: center;
    }

    .nav{
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding-top: 110rpx;
    }

    .nav-tab{
      width: 95%;
      border-radius: 20rpx;
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: center;
      background-color: white;


    }
    .nav-item{
      padding-top: 20rpx;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      margin: 0 5% 0 5%;
    }
    .nav-item image{
      background-color: rgb(228, 222, 222);
      border-radius: 50%;
      height: 70rpx;
      width: 70rpx;
    }
    .nav-item text{
      margin-top:10rpx; 
      margin-bottom:10rpx; 
      font-size: 25rpx;
    }
    .adv{
      width: 95%;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
   